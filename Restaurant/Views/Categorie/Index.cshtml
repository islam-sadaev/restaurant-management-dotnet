@model CategorieenListViewModel
@{
    ViewData["Title"] = "Overzicht Categorieen";
}

<h2>Categorieën</h2>

<a asp-action="AddCategorieen" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Nieuwe categorie
</a>

<!-- Scrollbare container -->
<div style="max-height: 400px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 0.25rem;">
    <table class="table mb-0">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(v => v.Categorieen[0].Naam)</th>
                <th>@Html.DisplayNameFor(v => v.Categorieen[0].Actief)</th>
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categorieen)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Naam)</td>
                    <td>@Html.DisplayFor(modelItem => item.Actief)</td>
                    <td>
                        <a asp-action="EditCategorieen"
                           asp-route-id="@item.Id"
                           class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-action="DeleteCategorieen"
                           asp-route-id="@item.Id"
                           class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
