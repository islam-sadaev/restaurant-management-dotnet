@model CategorieenCreateViewModel

@{
    ViewData["Title"] = "Nieuwe categorie";
}

<h2>Nieuwe categorie</h2>

<form asp-action="AddCategorieen" method="post" enctype="multipart/form-data">


    <div class="form-group mb-3">
        <label asp-for="Naam" class="form-label"></label>
        <input asp-for="Naam" class="form-control" />
        <span asp-validation-for="Naam" class="text-danger"></span>
    </div>

    <div class="form-group mb-3 form-check">
        <input asp-for="Actief" class="form-check-input" />
        <label asp-for="Actief" class="form-check-label"></label>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TypeId" class="form-label">Categorie type</label>
        <select asp-for="TypeId"
                asp-items="Model.CategorienType"
                class="form-select">
            <option value="">-- Selecteer type --</option>
        </select>
        <span asp-validation-for="TypeId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Foto" class="form-label">Foto</label>
        <input asp-for="Foto" type="file" class="form-control" />
        <span asp-validation-for="Foto" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Toevoegen
    </button>

    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Annuleren
    </a>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
