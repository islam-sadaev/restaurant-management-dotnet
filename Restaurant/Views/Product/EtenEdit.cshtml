@model Restaurant.ViewModels.EtenEditViewModel

<div class="container mt-5">
    <h1 class="mb-4 text-center ">Gerecht aanpassen</h1>

    <form asp-action="EtenEdit" method="post">
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Naam gerecht</th>
                        <th>Beschrijving</th>
                        <th>Allergenen</th>
                        <th>Prijs</th>
                        <th>Categorie</th>
                        <th class="text-center">Suggestie</th>
                        <th class="text-center">Actief</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input asp-for="Naam" type="text" class="form-control" placeholder="Naam gerecht" />
                            <span asp-validation-for="Naam" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="Beschrijving" type="text" class="form-control" placeholder="Beschrijving" />
                            <span asp-validation-for="Beschrijving" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="allergenenInfo" type="text" class="form-control" placeholder="Allergenen info" />
                            <span asp-validation-for="allergenenInfo" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="prijs" type="number" class="form-control" step="0.01" placeholder="€" />
                            <span asp-validation-for="prijs" class="text-danger"></span>
                        </td>
                        <td>
                            <select asp-for="categorieId" asp-items="Model.categories" class="form-select">
                                <option value="">-- Kies een categorie --</option>
                            </select>
                            <span asp-validation-for="categorieId" class="text-danger"></span>
                        </td>
                        <td class="text-center">
                            <div class="form-check d-flex justify-content-center">
                                <input asp-for="IsSuggestie" type="checkbox" class="form-check-input" />
                            </div>
                            <span asp-validation-for="IsSuggestie" class="text-danger"></span>
                        </td>
                        <td class="text-center">
                            <div class="form-check d-flex justify-content-center">
                                <input asp-for="Actief" type="checkbox" class="form-check-input" />
                            </div>
                            <span asp-validation-for="Actief" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-warning btn-lg">
                <i class="bi bi-pencil-square"></i> Pas gerecht aan
            </button>
        </div>
    </form>
</div>
