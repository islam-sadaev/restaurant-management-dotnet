@model DrankenLijstViewModel

@{
    ViewData["Title"] = "Overzicht dranken";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Overzicht dranken</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="CreateDrank" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nieuwe Drank
        </a>
    </div>

    <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(p => p.dranken[0].Naam)</th>
                    <th>@Html.DisplayNameFor(p => p.dranken[0].Beschrijving)</th>
                    <th>Allergenen</th>
                    <th>@Html.DisplayNameFor(p => p.dranken[0].prijs)</th>
                    <th>Suggestie</th>
                    <th>@Html.DisplayNameFor(p => p.dranken[0].Actief)</th>
                    <th>Acties</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.dranken)
                {
                    <tr>
                        <td>@Html.DisplayFor(d => item.Naam)</td>
                        <td>@Html.DisplayFor(d => item.Beschrijving)</td>
                        <td>@Html.DisplayFor(d => item.allergenenInfo)</td>
                        <td>@Html.DisplayFor(d => item.prijs)</td>
                        <td>
                            @if (item.IsSuggestie)
                            {
                                <span class="badge bg-success">Ja</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Nee</span>
                            }
                        </td>
                        <td>
                            @if (item.Actief)
                            {
                                <span class="badge bg-success">Actief</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactief</span>
                            }
                        </td>
                        <td>
                            <a asp-action="DrankEdit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-action="DrankDelete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
