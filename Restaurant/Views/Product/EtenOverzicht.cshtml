@model EtenLijstViewModel

@{
    ViewData["Title"] = "Overzicht gerecht";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Overzicht gerechten</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="CreateEten" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nieuwe gerecht
        </a>
    </div>

    <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
        <table class="table table-striped table-hover align-middle shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(p => p.eten[0].Naam)</th>
                    <th>@Html.DisplayNameFor(p => p.eten[0].Beschrijving)</th>
                    <th>Allergenen</th>
                    <th>@Html.DisplayNameFor(p => p.eten[0].Prijs)</th>
                    <th>Suggestie</th>
                    <th>@Html.DisplayNameFor(p => p.eten[0].Actief)</th>
                    <th class="text-center">Acties</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.eten)
                {
                    <tr class="align-middle">
                        <td>@Html.DisplayFor(d => item.Naam)</td>
                        <td>@Html.DisplayFor(d => item.Beschrijving)</td>
                        <td>@Html.DisplayFor(d => item.AllergenenInfo)</td>
                        <td>@item.Prijs.ToString("C")</td>
                        <td>
                            @if (item.IsSuggestie)
                            {
                                <span class="badge bg-success">Ja</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Nee</span>
                            }
                        </td>
                        <td>
                            @if (item.Actief)
                            {
                                <span class="badge bg-success">Actief</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactief</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="EtenEdit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <form asp-action="EtenDelete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Weet je zeker dat je dit gerecht wilt verwijderen?');">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
