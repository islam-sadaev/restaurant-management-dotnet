@model List<Restaurant.ViewModels.UserListItemViewModel>

@{
    ViewData["Title"] = "Gebruikers beheren";
}

<div class="container mt-4">
    <h1>Gebruikers beheren</h1>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Nieuwe gebruiker toevoegen</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Email</th>
                <th>Rollen</th>
                <th>Actief</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@(string.IsNullOrWhiteSpace(user.Naam) ? "(geen naam)" : user.Naam)</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.Rollen?.Any() ?? false)
                        {
                            @string.Join(", ", user.Rollen)
                        }
                        else
                        {
                            <em>Geen rol</em>
                        }
                    </td>
                    <td>
                        @if (user.Actief)
                        {
                            <span class="badge bg-success">Ja</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Nee</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary me-1">Bewerken</a>

                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Weet je zeker dat je deze gebruiker wilt verwijderen?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Verwijderen</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
