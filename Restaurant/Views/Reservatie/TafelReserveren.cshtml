@model KlantTafelReserverenViewModel
@{
    ViewData["Title"] = "Reserveren";
}

<h1>Reserveren</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TafelReserveren">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" type="date" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AantalPersonen" class="control-label"></label>
                <input asp-for="AantalPersonen" class="form-control" />
                <span asp-validation-for="AantalPersonen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opmerking" class="control-label"></label>
                <input asp-for="Opmerking" class="form-control" />
                <span asp-validation-for="Opmerking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TijdSlotId" class="control-label"></label>
                <select asp-for="TijdSlotId"
                        asp-items="Model.BeschikbareTijdsloten"
                        class="form-control">
                    <option value="">-- Kies een tijdslot --</option>
                </select>
                <span asp-validation-for="TijdSlotId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Tafel reserveren" class="btn btn-primary" />
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}