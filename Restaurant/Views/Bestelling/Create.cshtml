@model Restaurant.ViewModels.ProductLijstViewModel

<h1>Uw bestelling</h1>
<form asp-action="Create" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Aantal</th>
                <th>Opmerking</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.SelectedProducts.Count; i++)
            {
                <tr>
                    <td>
                        @Model.SelectedProducts[i].Naam
                        <input type="hidden" name="Bestellingen[@i].ProductId" value="@Model.SelectedProducts[i].Id" />
                    </td>
                    <td>
                        <input type="number" class="form-control" name="Bestellingen[@i].Aantal" value="1" />
                    </td>
                    <td>
                        <input type="text" class="form-control" name="Bestellingen[@i].Opmerking" />
                    </td>
                </tr>
                
            }

        </tbody>
    </table>
    <input type="submit" value="Plaats bestelling" class="btn btn-primary" />
</form>
