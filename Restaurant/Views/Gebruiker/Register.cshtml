@model Restaurant.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Account aanmaken";
}

<h2>Account aanmaken</h2>
<hr />
<form asp-action="Register" method="post" class="mb-5">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Voornaam"></label>*
                <input asp-for="Voornaam" class="form-control" />
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Achternaam"></label>*
                <input asp-for="Achternaam" class="form-control" />
                <span asp-validation-for="Achternaam" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Adres"></label>*
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Huisnummer"></label>*
                <input asp-for="Huisnummer" class="form-control" />
                <span asp-validation-for="Huisnummer" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Postcode"></label>*
                <input asp-for="Postcode" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gemeente"></label>*
                <input asp-for="Gemeente" class="form-control" />
                <span asp-validation-for="Gemeente" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LandId"></label>*
                <select asp-for="LandId" asp-items="Model.Landen" class="form-select"></select>
                <span asp-validation-for="LandId" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Email"></label>*
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password"></label>*
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword"></label>*
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

        </div>
        <div class="form-check mb-3">
            <input asp-for="Nieuwsbrief" class="form-check-input" />
            <label asp-for="Nieuwsbrief" class="form-check-label">
                Ik wil de nieuwsbrief ontvangen
            </label>
        </div>

    </div>

    <button class="btn btn-primary" type="submit">Volgende</button>
    <a asp-controller="Gebruiker" asp-action="Login" class="btn btn-primary">Ik heb al een account</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
