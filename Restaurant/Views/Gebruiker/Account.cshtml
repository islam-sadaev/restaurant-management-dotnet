@model Restaurant.ViewModels.AccountViewModel
@{
    ViewData["Title"] = "Mijn account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">Mijn account</h2>

            @if (TempData["AccountMessage"] != null)
            {
                <div class="alert alert-success">@TempData["AccountMessage"]</div>
            }

            @if (TempData["AccountError"] != null)
            {
                <div class="alert alert-danger">@TempData["AccountError"]</div>
            }

            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Gegevens wijzigen</h4>

                    <form asp-action="MyAccount" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Voornaam" class="form-label"></label>
                                <input asp-for="Voornaam" class="form-control" />
                                <span asp-validation-for="Voornaam" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Achternaam" class="form-label"></label>
                                <input asp-for="Achternaam" class="form-control" />
                                <span asp-validation-for="Achternaam" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly style="background-color: #e9ecef;" />
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Adres" class="form-label"></label>
                                <input asp-for="Adres" class="form-control" />
                                <span asp-validation-for="Adres" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Huisnummer" class="form-label"></label>
                                <input asp-for="Huisnummer" class="form-control" />
                                <span asp-validation-for="Huisnummer" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Postcode" class="form-label"></label>
                                <input asp-for="Postcode" class="form-control" />
                                <span asp-validation-for="Postcode" class="text-danger"></span>
                            </div>
                            <div class="col-md-8 mb-3">
                                <label asp-for="Gemeente" class="form-label"></label>
                                <input asp-for="Gemeente" class="form-control" />
                                <span asp-validation-for="Gemeente" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LandId" class="form-label">Land</label>
                            <select asp-for="LandId" asp-items="Model.Landen" class="form-select"></select>
                            <span asp-validation-for="LandId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Opslaan</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-danger shadow-sm mt-5 mb-5">
                <div class="card-body">
                    <h5 class="card-title">Account verwijderen</h5>
                    <p class="card-text">
                        Als u uw account verwijdert, kunt u niet meer inloggen. Uw gegevens worden geanonimiseerd.
                        Dit kan niet ongedaan worden gemaakt.
                    </p>

                    <form asp-action="DeleteAccount" method="post" onsubmit="return confirm('Weet u zeker dat u uw account wilt verwijderen? Dit kan niet ongedaan worden gemaakt!');">
                        <button type="submit" class="btn btn-outline-danger">
                            Mijn account definitief verwijderen
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}